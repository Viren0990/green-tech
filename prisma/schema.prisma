generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ContactForm {
  id        String   @id @default(cuid())
  name      String
  phone     String
  address    String
  message   String
  createdAt DateTime @default(now())
}

model Post {
  id        String   @id @default(cuid())
  title     String
  content   String
  mainImage String   // Primary image for the post
  images    String[] // Array of additional gallery images
  author    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

